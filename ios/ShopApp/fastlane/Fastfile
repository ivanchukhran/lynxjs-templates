default_platform(:ios)

platform :ios do
  desc "Sync certificates and profiles using Match"
  lane :sync_certs do
    match(type: "appstore", readonly: true)
    match(type: "adhoc", readonly: true)
  end

  desc "Build for App Store"
  lane :release do
    sync_certs

    build_app(
      workspace: "ShopApp.xcworkspace",
      scheme: "ShopApp",
      export_method: "app-store",
      output_directory: "./fastlane/output",
      output_name: "ShopApp.ipa"
    )
  end

  desc "Build for Ad-Hoc distribution"
  lane :adhoc do
    match(type: "adhoc", readonly: true)

    build_app(
      workspace: "ShopApp.xcworkspace",
      scheme: "ShopApp",
      export_method: "ad-hoc",
      output_directory: "./fastlane/output",
      output_name: "ShopApp-adhoc.ipa"
    )
  end

  desc "Build for Development (requires Match certificates)"
  lane :build do
    match(type: "development", readonly: true)

    build_app(
      workspace: "ShopApp.xcworkspace",
      scheme: "ShopApp",
      export_method: "development",
      output_directory: "./fastlane/output",
      output_name: "ShopApp-dev.ipa"
    )
  end

  # ============== No-Certificate Options ==============

  desc "Build for Simulator (no signing required)"
  lane :simulator do
    build_app(
      workspace: "ShopApp.xcworkspace",
      scheme: "ShopApp",
      configuration: "Debug",
      derived_data_path: "./build",
      destination: "generic/platform=iOS Simulator",
      skip_codesigning: true,
      skip_archive: true
    )
    UI.success("Simulator build complete! Output: ./build")
  end

  desc "Build with automatic signing (no Match, uses Xcode signing)"
  lane :dev do
    build_app(
      workspace: "ShopApp.xcworkspace",
      scheme: "ShopApp",
      configuration: "Debug",
      export_method: "development",
      export_options: {
        signingStyle: "automatic"
      },
      output_directory: "./fastlane/output",
      output_name: "ShopApp-dev.ipa"
    )
  end

  desc "Compile only (validate code builds, no output)"
  lane :build_only do
    xcodebuild(
      workspace: "ShopApp.xcworkspace",
      scheme: "ShopApp",
      configuration: "Debug",
      build: true,
      destination: "generic/platform=iOS",
      xcargs: "CODE_SIGNING_ALLOWED=NO"
    )
    UI.success("Build validation complete!")
  end

  desc "Upload to App Store Connect"
  lane :upload do
    upload_to_app_store(
      skip_screenshots: true,
      skip_metadata: true
    )
  end

  desc "Upload to TestFlight"
  lane :beta do
    release
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end
end
